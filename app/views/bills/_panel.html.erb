<article class="panel <%= local_assigns[:classes].present? ? classes : '' %>">
  <header class="panel__header">
    <%= image_tag 'icon-coin.svg', class: "panel__image" %>

    <div class="panel__heading">
      <h3 class="panel__title"><%= link_to bill.name, bill_path(bill.id) %></h3>

      <p class="panel__text">
        <%= bill.created_at.strftime('%d') %>

        <%= bill.created_at.strftime('%b') %>
      </p>
    </div>

    <p class="panel__price"><%= bill.price %> PLN</p>
  </header>

  <section class="panel__details">
    <ul class="panel__icons">
      <% bill.recipients.take(3).each do  %>
      <li class="panel__icon"></li>
      <%end %>

      <% if bill.recipients.count > 3 %>
      <li class='panel__counter'>+<%=bill.recipients.count - 3%></li>
      <% end %>
    </ul>
  </section>
</article>